package RSA;

public class rsa {
	public static int gcd(double a, double b)
	{
			
		if(b==0)
			return a;
		else
			return gcd(b,a%b);
	}
	public static void main(String[] args)
	{
		double i;
		double p,q,n,et,e,d=1;
		double m,c=1;
		p = 7;
		q = 13;
		n = p*q;
		et = (p-1) * (q-1);
		for(i=2;i<=et;i++)
		{
			if(gcd(i,et)==1)
				break;
		}
		e=i;
		for(i=2;i<=n;i++)
		{
			if((e*i)%et == 1){
				break;
			}
		}
		d=i;
		System.out.println(d);
		//encryption
		m = 10;
		for(i=1;i<=e;i++)
		{
			c=(c*m)%n;
			c=c%n;
		}
		System.out.println("\n Cipher text :"+c);
		
		//decryption
		double m1=1;
		for(i=1;i<=d;i++)
		{
			m1=(m1*c)%n;
			m1=m1%n;
		}
		System.out.println("\n Plain text :"+m1);
		
		
		
	}

}
